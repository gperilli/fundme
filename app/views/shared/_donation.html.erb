
<section class="donation-cards-container bg-light py-5" id="donate">
  <div class="container px-4 px-lg-5" >
    <h2 class="text-black mb-4">
      <%= @sitewide_text_items.find_by(name: "support us")[I18n.locale.to_s].titleize %>
    </h2>
    <div class="row gx-4 gx-lg-5">
      
      <div class="col-md-4 mb-3 mb-md-0">
        <div class="card py-4 h-100 bg-white" style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
          <div class="card-body text-center">
              <i class="fa-regular fa-credit-card"></i> / <i class="fa-solid fa-money-bill-wave"></i>
              <h4 class="text-uppercase m-0"><%= @sitewide_text_items.find_by(name: "$20 month")[I18n.locale.to_s] %></h4>
              <h4 class="text-uppercase m-0 mt-2"><%= t("this_payment_is_for_one_month") %></h4>
              <hr class="my-4 mx-auto" />
              <div class="small text-black-50">-</div>
              
              <%= link_to t("$sum_/_month"), new_donation_path(:donation_type => "monthly_subscription"), class: "btn btn-primary mb-2 fundme-button-link" %>
          </div>
        </div>
      </div>

      <div class="col-md-4 mb-3 mb-md-0">
        <div class="card py-4 h-100 bg-white" style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
          <div class="card-body text-center">
            <i class="fa-regular fa-credit-card"></i> / <i class="fa-solid fa-money-bill-wave"></i>
            <h4 class="text-uppercase m-0"><%= @sitewide_text_items.find_by(name: "$200 year")[I18n.locale.to_s] %></h4>
            <h4 class="text-uppercase m-0 mt-2"><%= t("this_payment_is_for_one_year") %></h4>
            <hr class="my-4 mx-auto" />
            <div class="small text-black-50">-</div>
            
            <%= link_to t("$sum_/_year"), new_donation_path(:donation_type => "yearly_subscription"), class: "btn btn-primary mb-2 fundme-button-link" %>
          </div>
        </div>
      </div>

      <div class="col-md-4 mb-3 mb-md-0">
        <div class="card py-4 h-100 bg-white" style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
          <div class="card-body text-center">
            <i class="fa-regular fa-credit-card"></i> / <i class="fa-solid fa-money-bill-wave"></i>
            <h4 class="text-uppercase m-0 mt-4"><%= @sitewide_text_items.find_by(name: "one time donation")[I18n.locale.to_s] %></h4>
            <hr class="my-4 mx-auto" />
            <div class="small text-black-50">-</div>

            <%= link_to t("one_time_donation"), new_donation_path(:sub_amount => 0), class: "btn btn-primary mb-2 fundme-button-link" %>
          </div>
        </div>
      </div>

    </div>
    <p class="text-white-50 mt-5"><%= @sitewide_text_items.find_by(name: "payment advice")[I18n.locale.to_s] %></p>
  </div>
</section>
