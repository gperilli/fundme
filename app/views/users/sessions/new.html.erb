<div style="position: relative; width: 100%; height: auto; min-height: 100vh; margin-bottom: 20px; float: left;">
  <div class="devisebackground" style="position: absolute;">
  </div>

  <div style="width: 100%; height: auto; position: relative; padding-top: 5rem;">
    <div class="container px-4 px-lg-5">
      <h2 class="devise-titles"><%= t("login").capitalize %></h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.label t("login"), class: "form-label" %><em class="form-label"> (<%= t("email") %>)</em><br/>
          <div class="col-md-6 mb-4">
            <div class="md-form mb-0">
              <%= f.text_field :email, autofocus: true, autocomplete: "email", type: "text", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="field">
          <%= f.label :password, class: "form-label" %><br />
          <div class="col-md-6 mb-4">
            <div class="md-form mb-0">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "form-label" %>
          </div>
        <% end %>
          <div class="actions">
            <%= f.submit t("login"), class: "btn btn-primary mb-2", class: "btn btn-primary mb-2 fundme-submit" %>
          </div>
      <% end %>

      <%= render "users/shared/links" %>

    </div>
  </div>
</div>
